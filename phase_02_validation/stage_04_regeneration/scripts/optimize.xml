<ROSETTASCRIPTS>               
    <SCOREFXNS>
        <ScoreFunction name="r15" weights="ref2015_cart"/>
    </SCOREFXNS>

    <RESIDUE_SELECTORS>
        <Index name="mutant" resnums="%%orig_aa%%"/>
        <Chain name="pep" chains="E"/>
        <Neighborhood name="shell" selector="pep" distance="12.0"/>
    </RESIDUE_SELECTORS>

    <TASKOPERATIONS>
        <InitializeFromCommandline name="init"/>
        <IncludeCurrent name="cur"/>
    </TASKOPERATIONS>

    <SIMPLE_METRICS>
        <RMSDMetric name="rmsd" rmsd_type="rmsd_all_heavy" use_native="1" super="1" residue_selector="pep"/>
    </SIMPLE_METRICS>

    <MOVERS>
        <MutateResidue name="mutate" residue_selector="mutant" new_res="%%new_ncaa%%"/> 
        <RunSimpleMetrics name="cal_rmsd" metrics="rmsd"/>     
        <FastRelax name="relax_shell" scorefxn="r15" task_operations="init,cur" cartesian="1">
            <MoveMap name="move_shell" bb="0" chi="0">
                <ResidueSelector selector="shell" chi="1" bb="1"/>
            </MoveMap>
        </FastRelax>
    </MOVERS>

    <PROTOCOLS>
        <Add mover="mutate"/>
        <Add mover="relax_shell"/>
        <Add mover="cal_rmsd"/>
    </PROTOCOLS>

    <OUTPUT scorefxn="r15"/>
</ROSETTASCRIPTS>